{{#if client}}
  <span>Register on the <strong>Nazareth Open Tourism Platform</strong> to continue to <strong>{{ client }}</strong>.</span>
{{/if}}

<form class="{{> classes/form }}" method="POST" action={{> paths/register }}>

  <h2 class="{{> classes/formTitle }}">Register for the Nazareth Open Tourism Platform</h2>

  <span>(required fields are signalled with a *)</span>

  <label class="{{> classes/formLabel }}">Username:*
    <input class="{{> classes/formInput }}" type="text" name="username" required>
  </label>

  <label class="{{> classes/formLabel }}">Email:*
    <input class="{{> classes/formInput }}" type="email" name="email" required>
  </label>

  <label class="{{> classes/formLabel }}">Password:*
    <input class="{{> classes/formInput }}" type="password" name="password" required>
  </label>

  <label class="{{> classes/formLabel }}">Confirm Password:*
    <input class="{{> classes/formInput }}" type="password" name="confirm-password" required>
  </label>

  <span>The details below are required in at least one of English and Arabic.</span>

  <fieldset class="{{> classes/fieldset }}" name="en">

    <strong>English</strong>

    <label class="{{> classes/formLabel }}">Name:*
      <input class="{{> classes/formInput }}" type="text" name="name_en">
    </label>

    <label class="{{> classes/formLabel }}">Organisation name:
      <input class="{{> classes/formInput }}" type="text" name="organisationName_en">
    </label>

    <label class="{{> classes/formLabel }}">Organisation description:
      <textarea class="{{> classes/formInput }}" name="organisationDescription_en"></textarea>
    </label>
  </fieldset>

  <fieldset class="{{> classes/fieldset }}" name="ar">

    <strong>Arabic</strong>

    <label class="{{> classes/formLabel }}">Name:*
      <input class="{{> classes/formInput }}" type="text" name="name_ar">
    </label>

    <label class="{{> classes/formLabel }}">Organisation name:
      <input class="{{> classes/formInput }}" type="text" name="organisationName_ar">
    </label>

    <label class="{{> classes/formLabel }}">Organisation description:
      <textarea class="{{> classes/formInput }}" name="organisationDescription_ar"></textarea>
    </label>
  </fieldset>

  <button class="{{> classes/formSubmit }}" type="submit" value="submit">Submit</button>

</form>